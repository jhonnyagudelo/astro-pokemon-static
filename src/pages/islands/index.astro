---
import MainLayout from "../../layout/MainLayout.astro";
import Title from "../../components/shared/Title.astro";
import { Counter } from "../../components/counter/Counter";
const title = "Islas";
const initValue = 20;
---

<MainLayout title={title}>
  <Title>Islas</Title>
  <video controls="" autoplay="" transition:persist>
    <source
      src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4"
      type="video/mp4"
    />
  </video>
  <div style={{ height: "200px", backgroundColor: "red", opacity: 0.4 }}></div>
  <!-- <Counter client:load /> -->
  <!-- <Counter client:only='solid.js' /> -->
  <Counter
    client:visible
    transition:persist="counter"
    transition:persist-props
    initValue={initValue}
  >
    <Title>Counter Island</Title>
  </Counter>
</MainLayout>
